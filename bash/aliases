# deals/android
alias abe='cd ~/projects/deals_android && rm -rf build && ant debug && adb -e uninstall com.livingsocial.www && adb -e install ./build/deals-release.apk'
alias abd='cd ~/projects/deals_android && rm -rf build && ant release && adb -d uninstall com.livingsocial.www && adb -d install ./build/deals-release.apk'

alias android_log="adb -e logcat"
alias android_log_device="adb -d logcat"
